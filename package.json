  "main": "server.babel.js",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.6.0",
    "babel-polyfill": "^6.6.1",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.6.0",
    "babelify": "^7.2.0",
