    "isomorphic-fetch": "^2.2.1",
    "highlight.js": "^9.2.0",
    "koa": "^1.1.2",
    "koa-basic-auth": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-error": "^1.1.3",
    "koa-less": "0.0.3",
    "koa-morgan": "^0.4.0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "koa-watchify": "^1.1.1",
    "marked": "^0.3.5",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.0",
    "react-router": "^2.0.0",
